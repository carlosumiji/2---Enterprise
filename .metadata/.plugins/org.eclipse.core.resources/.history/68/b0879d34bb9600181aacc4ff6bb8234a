package br.com.fiap.spring.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;

@Controller
@RequestMapping("contato")
public class ContatoController {

		//Método que abre a página com o formulário
		@GetMapping("enviar")
		public String abrirHome() {
			return "contato/form"; 
		}
		
		//Metodo que Processa as infomação do formulário
		@PostMapping("enviar")
		public String processarForm(String nome, String telefone, String email){
			System.out.println(nome + " " + telefone + " " + email);
			return "contato/form";
		}
}
